{
  "name": "panda-ext",
  "description": "Pandora chrome extension",
  "version": "1.0.0",
  "dependencies": {
    "babel-cli": "^6.24.1",
    "babel-preset-es2015": "^6.24.1",
    "lodash": "^4.17.4",
    "stylus": "^0.54.5"
  },
  "scripts": {
    "build": "mkdir -p dist && npm run css && npm run js",
    "css": "./node_modules/.bin/stylus src/css/main.styl -o dist/main.css",
    "js": "./node_modules/.bin/babel src/js/main.js --out-file dist/main.js"
  }
}
